<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="713.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="zct.sistemas.leko.controller.FormOrcamentosController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="30.0">
               <children>
                  <Label text="Valor da mão-de-obra:">
                     <HBox.margin>
                        <Insets left="40.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtMaoDeObra" prefHeight="25.0" prefWidth="476.0" />
               </children>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </HBox>
            <HBox maxHeight="100.0" spacing="30.0">
               <children>
                  <Label text="Descrição dos serviços:">
                     <HBox.margin>
                        <Insets left="40.0" />
                     </HBox.margin>
                  </Label>
                  <TextArea fx:id="txtServicos" prefWidth="478.0" />
               </children>
            </HBox>
            <Separator prefWidth="200.0" />
            <HBox alignment="CENTER_LEFT" spacing="85.0">
               <children>
                  <Label text="Ítem:">
                     <HBox.margin>
                        <Insets left="40.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="comboItens" prefHeight="25.0" prefWidth="226.0" promptText="Selecionar item...">
                     <HBox.margin>
                        <Insets left="40.0" />
                     </HBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ComboBox>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="16.0">
               <children>
                  <Label text="Quantidade:">
                     <HBox.margin>
                        <Insets left="40.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtQuantidade" prefHeight="25.0" prefWidth="333.0">
                     <HBox.margin>
                        <Insets left="70.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="btAddItem" mnemonicParsing="false" onAction="#addItem" prefHeight="25.0" prefWidth="124.0" text="Adicionar">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
            </HBox>
            <HBox prefHeight="305.0" prefWidth="750.0" VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="tblItens" prefHeight="207.0" prefWidth="750.0" HBox.hgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="colQuantidade" prefWidth="75.0" text="Quantidade" />
                      <TableColumn fx:id="colUnidade" prefWidth="75.0" text="Unidade" />
                        <TableColumn fx:id="colDescricao" prefWidth="75.0" text="Descrição" />
                        <TableColumn fx:id="colValorUnitario" prefWidth="75.0" text="Valor unitário" />
                        <TableColumn fx:id="colSubTotal" prefWidth="75.0" text="Sub-total" />
                        <TableColumn fx:id="colExcluir" prefWidth="75.0" text="Excluir" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="750.0" spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox alignment="CENTER" prefHeight="110.0" prefWidth="979.0" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
                           <children>
                              <Label text="Total:">
                                 <font>
                                    <Font size="32.0" />
                                 </font>
                              </Label>
                              <Label text="0.0">
                                 <font>
                                    <Font size="32.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="638.0" spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Button fx:id="btGenerate" mnemonicParsing="false" onAction="#generate" text="Gerar orçamento">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Button fx:id="btCancel" mnemonicParsing="false" onAction="#cancel" prefHeight="25.0" prefWidth="106.0" text="Cancelar">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
